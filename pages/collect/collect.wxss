/* pages/collect/collect.wxss */
.goods-list .items{
  display: flex;
  /*元素排成一整行*/
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-bottom: solid 5rpx #eeeeee;
}
.goods-list .items .pic{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .items .pic image{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .items .content{
  margin-left: 10rpx;
  /*width: 100%;
  height: 100%;*/
}
.goods-list .items .content .title{
  font-size: 30rpx;
}
.goods-list .items .content .desc{
  font-size: 25rpx;
  color: #47cdee;
  margin-top: 10rpx;
}
.goods-list .items .content .detal{
  font-size: 25rpx;
  color: #999999;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.goods-list .items .content .price{
  font-size: 30rpx;
  color: chocolate;
  margin-top: 10rpx;
}
.goods-list .tip{
  text-align: center;
  padding: 20rpx;
  color: #999999;
}